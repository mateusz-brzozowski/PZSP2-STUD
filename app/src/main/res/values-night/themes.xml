<resources>
	<!-- Base application theme. -->
	<style name="Theme.Android" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/colorPrimaryDark</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/colorOnPrimaryDark</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/colorSecondaryDark</item>
		<item name="colorSecondaryVariant">@color/purple_700</item>
		<item name="colorOnSecondary">@color/colorOnSecondaryDark</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorTertiary</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="title_large">
		<item name="android:textSize">22sp</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>

	<style name="title_medium">
		<item name="android:textSize">18sp</item>
		<item name="android:letterSpacing">0.01</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>

	<style name="title_small">
		<item name="android:textSize">14sp</item>
		<item name="android:letterSpacing">0.01</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>

	<style name="label_large">
		<item name="android:textSize">14sp</item>
		<item name="android:letterSpacing">0.01</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>

	<style name="label_medium">
		<item name="android:textSize">12sp</item>
		<item name="android:letterSpacing">0.04</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>

	<style name="label_small">
		<item name="android:textSize">11sp</item>
		<item name="android:letterSpacing">0.05</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>

	<style name="body_large">
		<item name="android:textSize">16sp</item>
		<item name="android:letterSpacing">0.03</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>

	<style name="body_medium">
		<item name="android:textSize">14sp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>

	<style name="body_small">
		<item name="android:textSize">12sp</item>
		<item name="android:letterSpacing">0.03</item>
		<item name="android:textColor">@color/colorOnSurfaceDark</item>
	</style>
</resources>
