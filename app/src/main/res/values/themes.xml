<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Android" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/colorOnPrimary</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/colorSecondary</item>
		<item name="colorSecondaryVariant">@color/purple_700</item>
		<item name="colorOnSecondary">@color/colorOnSecondary</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorTertiary</item>
		<!-- Customize your theme here. -->
		<item name="android:fontFamily">sans-serif</item>
		<item name="colorPrimarySurface">@color/colorSurface1</item>
		<item name="colorSurface">@color/colorSurface5</item>
		<item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="Theme.Android.button" parent="Theme.Android">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:minHeight">@dimen/button_min_height</item>
		<item name="android:layout_margin">@dimen/button_margin_horizontal</item>
		<item name="android:paddingHorizontal" tools:targetApi="o">@dimen/button_padding_horizontal</item>
		<item name="android:background">@drawable/button_background_ripple</item>
		<item name="android:elevation">@dimen/button_elevation</item>
		<item name="iconTint">?colorPrimary</item>
	</style>

	<style name="Theme.Android.iconButton" parent="Theme.Android">
		<item name="android:layout_width">48dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:layout_margin">3dp</item>
		<item name="android:elevation">3dp</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">12dp</item>
		<item name="android:background">@drawable/edit_button</item>
		<item name="backgroundTint">@null</item>
		<item name="iconTint">@color/colorPrimary</item>
	</style>

	<style name="Theme.Android.editText" parent="Theme.Android">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:autofillHints" tools:targetApi="o">""</item>
		<item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/activity_horizontal_margin</item>
		<item name="android:layout_marginVertical" tools:targetApi="o">@dimen/activity_horizontal_margin</item>
		<item name="android:background">@drawable/surface_background</item>
		<item name="android:paddingHorizontal" tools:targetApi="o">@dimen/activity_horizontal_padding</item>
		<item name="android:paddingVertical" tools:targetApi="o">@dimen/activity_vertical_padding</item>
		<item name="android:elevation">@dimen/elevation</item>
	</style>

	<style name="Theme.Android.editText.search" parent="Theme.Android.editText">
		<item name="android:drawableLeft">@drawable/ic_search</item>
		<item name="android:hint">@string/search</item>
		<item name="android:inputType">text</item>
	</style>

	<style name="Theme.Android.CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/Theme.Android.CustomBottomSheet</item>
	</style>

	<style name="Theme.Android.CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
		<item name="shapeAppearanceOverlay">@style/Theme.Android.CustomShapeAppearanceBottomSheetDialog</item>
	</style>

	<style name="Theme.Android.CustomShapeAppearanceBottomSheetDialog" parent="">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSizeTopRight">16dp</item>
		<item name="cornerSizeTopLeft">16dp</item>
		<item name="cornerSizeBottomRight">0dp</item>
		<item name="cornerSizeBottomLeft">0dp</item>
		<item name="elevation">4dp</item>
	</style>

	<style name="title_large">
		<item name="android:textSize">22sp</item>
		<item name="android:textColor">?android:textColor</item>
	</style>

	<style name="title_medium">
		<item name="android:textSize">18sp</item>
		<item name="android:letterSpacing">0.01</item>
		<item name="android:textColor">?android:textColor</item>
	</style>

	<style name="title_small">
		<item name="android:textSize">14sp</item>
		<item name="android:letterSpacing">0.01</item>
		<item name="android:textColor">?android:textColor</item>
	</style>

	<style name="label_large">
		<item name="android:textSize">14sp</item>
		<item name="android:letterSpacing">0.01</item>
		<item name="android:textColor">?android:textColor</item>
	</style>

	<style name="label_medium">
		<item name="android:textSize">12sp</item>
		<item name="android:letterSpacing">0.04</item>
		<item name="android:textColor">?android:textColor</item>
	</style>

	<style name="label_small">
		<item name="android:textSize">11sp</item>
		<item name="android:letterSpacing">0.05</item>
		<item name="android:textColor">?android:textColor</item>
	</style>

	<style name="body_large">
		<item name="android:textSize">16sp</item>
		<item name="android:letterSpacing">0.03</item>
		<item name="android:textColor">?android:textColor</item>
	</style>

	<style name="body_medium">
		<item name="android:textSize">14sp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:textColor">?android:textColor</item>
	</style>

	<style name="body_small">
		<item name="android:textSize">12sp</item>
		<item name="android:letterSpacing">0.03</item>
		<item name="android:textColor">?android:textColor</item>
	</style>
</resources>
